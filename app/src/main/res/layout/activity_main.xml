<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191819"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".MainActivity"
    android:id="@+id/e">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Circle Pong"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp"
        android:textColor="#FF2D55"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_x="84dp"
        android:layout_y="49dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:width="185dp"
        android:height="55dp"
        android:id="@+id/playButton"
        android:background="@drawable/custom_button"
        android:layout_marginBottom="111dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_x="88dp"
        android:layout_y="452dp" />

    <SurfaceView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/surfaceView"
        android:layout_x="82dp"
        android:layout_y="176dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/achievement_btn"
        android:layout_x="298dp"
        android:layout_y="532dp"
        android:src="@drawable/food"
        android:scaleType="fitCenter"
        android:background="#00000000" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton"
        android:layout_x="246dp"
        android:layout_y="533dp"
        android:src="@drawable/knock"
        android:scaleType="fitCenter"
        android:background="#00000000" />

</AbsoluteLayout>
